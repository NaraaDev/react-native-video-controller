{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
